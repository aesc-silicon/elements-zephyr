#include <elements/nitrogen.dtsi>

/ {
	#address-cells = <1>;
	#size-cells = <1>;

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "elements,nitrogen-soc", "simple-bus";
		ranges;

		gpio0: gpio@f0000000 {
			compatible = "elements,gpio";
			reg = <0xf0000000 0x1000>;
			interrupt-parent = <&plic>;
			interrupts = <0 1>;
			gpio-controller;
			#gpio-cells = <2>;
			status = "disabled";
		};

		uart0: uart0@f0006000 {
			compatible = "elements,uart";
			reg = <0xf0006000 0x1000>;
			interrupt-parent = <&plic>;
			interrupts = <4 1>;
			clock-frequency = <DT_FREQ_M(20)>;
			status = "disabled";
		};
	};
};

&plic {
	riscv,ndev = <6>;
};
