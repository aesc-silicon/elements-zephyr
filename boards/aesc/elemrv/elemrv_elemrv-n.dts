/dts-v1/;

#include <elements/elemrv-n.dtsi>

/ {
	model = "aesc silicon ElemRV-N";
	compatible = "aesc,elemrv-n";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &ram0;
		zephyr,flash = &flash0;
	};

	aliases {
		led0 = &heartbeat_led;
	};

	leds: leds {
		compatible = "gpio-leds";
		heartbeat_led: led_0 {
			gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
			label = "Heartbeat LED";
		};
	};
	keys {
		compatible = "gpio-keys";
		reset_btn: reset_btn {
			gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
			label = "Reset Button";
		};
	};
};

&uart0 {
	current-speed = <115200>;
	status = "okay";
};

&gpio0 {
	status = "okay";
};
