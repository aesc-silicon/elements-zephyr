/dts-v1/;
#include <helium/helium2.dtsi>
#include <zephyr/dt-bindings/pwm/pwm.h>

/ {
	model = "helium2_nexysa7";
	compatible = "elements,helium2_nexysa7";

	chosen {
		zephyr,console = &uartStdCtrl;
		zephyr,shell-uart = &uartStdCtrl;
		zephyr,sram = &ram0;
	};

	aliases {
		blue-pwm-led = &blue_pwm_led;
		green-pwm-led = &green_pwm_led;
		red-pwm-led = &red_pwm_led;
	};

	leds {
		compatible = "gpio-leds";
		heartbeat: HEARTBEAT {
			gpios = <&gpioStatusCtrl 0 GPIO_ACTIVE_HIGH>;
			label = "Heartbeat LED";
		};

		red: RED {
			gpios = <&gpioStatusCtrl 1 GPIO_ACTIVE_HIGH>;
			label = "Red LED";
		};

		green: GREEN {
			gpios = <&gpioStatusCtrl 2 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		red_pwm_led: pwm_led_0 {
			pwms = <&pwmLEDCtrl 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "LD8 RGB LED (red)";
		};
		green_pwm_led: pwm_led_1 {
			pwms = <&pwmLEDCtrl 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "LD8 RGB LED (green)";
		};
		blue_pwm_led: pwm_led_2 {
			pwms = <&pwmLEDCtrl 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "LD8 RGB LED (blue)";
		};
	};

	keys {
		compatible = "gpio-keys";
		btnc: sw0 {
			gpios = <&gpioStatusCtrl 1 GPIO_ACTIVE_HIGH>;
			label = "Button Center";
		};

		btnu: sw1 {
			gpios = <&gpioStatusCtrl 2 GPIO_ACTIVE_HIGH>;
			label = "Button Up";
		};

		btnr: sw2 {
			gpios = <&gpioStatusCtrl 3 GPIO_ACTIVE_HIGH>;
			label = "Button Right";
		};

		btnb: sw3 {
			gpios = <&gpioStatusCtrl 4 GPIO_ACTIVE_HIGH>;
			label = "Button Down";
		};

		btnl: sw4 {
			gpios = <&gpioStatusCtrl 5 GPIO_ACTIVE_HIGH>;
			label = "Button Left";
		};
	};
};

&uartStdCtrl {
	clock-frequency = <100000000>;
};

&pwmLEDCtrl {
	clock-frequency = <100000000>;
};

&i2cACtrl {
	clock-frequency = <100000000>;
};
