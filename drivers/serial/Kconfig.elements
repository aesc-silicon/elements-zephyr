menuconfig UART_ELEMENTS
	bool "Elements UART driver"
	default y
	depends on DT_HAS_ELEMENTS_UART_ENABLED
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	help
	  Enable the Elements UART driver.
